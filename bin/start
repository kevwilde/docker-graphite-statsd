#!/bin/bash

docker_tag=${1:-"kevwilde/graphite-statsd"}
container_name=${2:-"graphite"}

sudo docker run \
	--name="$container_name" \
	-d -i -t \
	-p 80:80 \
	-p 2003:2003 \
	-p 8125:8125/udp \
	-v /var/log/graphite:/var/log \
	-v /opt/graphite/storage \
	-v /opt/graphite/conf \
	"$docker_tag" /opt/dockerdata/graphite-statsd/start
